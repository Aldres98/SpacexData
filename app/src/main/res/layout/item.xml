<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardElevation="14dp"
    android:id="@+id/cv">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        >

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/mission_patch"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/rocket"
            android:layout_marginRight="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rocket_name"
            android:layout_marginRight="16dp"
            android:text="@string/sample_rocket_name"
            android:layout_toRightOf="@+id/mission_patch"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/sample_launch_date"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/launch_date"
            android:layout_toRightOf="@+id/mission_patch"
            android:layout_below="@+id/rocket_name"
            />

        <TextView
            android:id="@+id/additional_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/mission_patch"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>
